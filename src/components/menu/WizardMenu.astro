---
import * as React from "react";
import Link from "next/link";

import { cn } from "@/lib/utils";
import { Icons } from "@components/icons";
import {
  NavigationMenuLink,
  NavigationMenuItem,
  NavigationMenuList,
  NavigationMenu,
} from "@/components/ui/navigation-menu";
import { Switch } from "@/components/ui/switch";
import { Label } from "@/components/ui/label";
---

<nav class="bg-[#0d0d2b] bg-opacity-80">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <h1 class="text-3d animate-pulse text-xl font-bold text-white">
            DICE WIZARD
          </h1>
        </div>
        <div class="ml-auto mr-auto hidden md:block">
          <NavigationMenu>
            <NavigationMenuList
              className="flex items-baseline justify-center space-x-4"
            >
              <NavigationMenuItem>
                <NavigationMenuLink
                  className="rounded-md px-2 py-1 transition-colors duration-200 hover:bg-gray-700"
                  href="#"
                >
                  Games
                </NavigationMenuLink>
              </NavigationMenuItem>
              <NavigationMenuItem>
                <NavigationMenuLink
                  className="rounded-md px-2 py-1 transition-colors duration-200 hover:bg-gray-700"
                  href="#"
                >
                  Register
                </NavigationMenuLink>
              </NavigationMenuItem>
              <NavigationMenuItem>
                <NavigationMenuLink
                  className="rounded-md px-2 py-1 transition-colors duration-200 hover:bg-gray-700"
                  href="#"
                >
                  Learn
                </NavigationMenuLink>
              </NavigationMenuItem>
              <NavigationMenuItem>
                <NavigationMenuLink
                  className="rounded-md px-2 py-1 transition-colors duration-200 hover:bg-gray-700"
                  href="#"
                >
                  Loot
                </NavigationMenuLink>
              </NavigationMenuItem>
              <NavigationMenuItem>
                <NavigationMenuLink
                  className="rounded-md px-2 py-1 transition-colors duration-200 hover:bg-gray-700"
                  href="#"
                >
                  Events
                </NavigationMenuLink>
              </NavigationMenuItem>
              <NavigationMenuItem>
                <NavigationMenuLink
                  className="rounded-md px-2 py-1 transition-colors duration-200 hover:bg-gray-700"
                  href="#"
                >
                  Join
                </NavigationMenuLink>
              </NavigationMenuItem>
              <NavigationMenuItem>
                <NavigationMenuLink
                  className="rounded-md px-2 py-1 transition-colors duration-200 hover:bg-gray-700"
                  href="#"
                >
                  Contact
                </NavigationMenuLink>
              </NavigationMenuItem>
            </NavigationMenuList>
          </NavigationMenu>
        </div>
        <div class="md:hidden">
          <button
            id="menu-button"
            type="button"
            class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
            aria-controls="menu"
            aria-expanded="false"
          >
            <span class="sr-only">Open menu</span>
            <!-- Icon -->
          </button>
        </div>
      </div>
      <div class="hidden md:block">
        <div class="ml-4 flex items-center md:ml-6">
          <Switch className="ml-auto" id="dark-mode" />
          <Label
            className="ml-2 text-white text-opacity-70"
            htmlFor="dark-mode"
          >
            Dark Mode
          </Label>
        </div>
      </div>
    </div>
  </div>

  <div
    id="menu"
    class="fixed inset-0 z-10 hidden"
    role="dialog"
    aria-labelledby="menu-button"
    aria-hidden="true"
  >
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50"></div>

    <div class="relative w-full max-w-xs bg-white px-6 py-4 shadow-xl">
      <div class="flex justify-end">
        <button
          type="button"
          class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
          aria-label="Close menu"
          onclick="closeMenu()"
        >
          <span class="sr-only">Close menu</span>
          <!-- Icon -->
        </button>
      </div>

      <ul class="space-y-2">
        <li>
          <a href="/" class="block px-4 py-2 text-black hover:bg-gray-700"
            >Games</a>
        </li>
        <li>
          <a href="/about" class="block px-4 py-2 text-black hover:bg-gray-700"
            >Register</a>
        </li>
        <li>
          <a
            href="/contact"
            class="block px-4 py-2 text-black hover:bg-gray-700">Learn</a>
        </li>
        <li>
          <a
            href="/contact"
            class="block px-4 py-2 text-black hover:bg-gray-700">Loot</a>
        </li>
        <li>
          <a
            href="/contact"
            class="block px-4 py-2 text-black hover:bg-gray-700">Events</a>
        </li>
        <li>
          <a
            href="/contact"
            class="block px-4 py-2 text-black hover:bg-gray-700">Join</a>
        </li>
        <li>
          <a
            href="/contact"
            class="block px-4 py-2 text-black hover:bg-gray-700">Contact</a>
        </li>
      </ul>
    </div>
  </div>

  <script>
    function closeMenu() {
      const menu = document.getElementById("menu");
      if (menu) {
        menu.classList.add("hidden");
      }
    }

    const menuButton = document.getElementById("menu-button");
    if (menuButton) {
      menuButton.addEventListener("click", () => {
        const menu = document.getElementById("menu");
        if (menu) {
          menu.classList.remove("hidden");
        }
      });
    }
  </script>
</nav>
