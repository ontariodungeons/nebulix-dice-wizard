---
import { Input } from "@/components/ui/input";
import { RadioGroupItem, RadioGroup } from "@/components/ui/radio-group";
import { Label } from "@/components/ui/label";
import { Checkbox } from "@/components/ui/checkbox";
import { Textarea } from "@/components/ui/textarea";
import { Button } from "@/components/ui/button";
import {
  Form,
  FormControl,
  FormDescription,
  FormField,
  FormItem,
  FormLabel,
  FormMessage,
} from "@/components/ui/form";
---

<div
  class="mx-auto my-8 max-w-4xl rounded-3xl border-8 border-indigo-500 bg-white p-4 shadow-xl"
>
  <h1 class="my-6 text-center text-4xl font-bold text-indigo-600">
    DICE WIZARD GAMES SIGN UP
  </h1>
  <form class="space-y-6">
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      <div class="flex flex-col">
        <label class="text-lg font-semibold">
          Name *
          <Input
            className="transition-all focus:scale-105 focus:outline-none focus:ring-2 focus:ring-indigo-300"
            id="name"
            placeholder="Please enter your full name."
          />
        </label>
      </div>
      <div class="flex flex-col">
        <label class="text-lg font-semibold">
          Username *

          <Input
            className="transition-all focus:scale-105 focus:outline-none focus:ring-2 focus:ring-indigo-300"
            id="username"
            placeholder="Choose a unique username for your account."
          />
        </label>
      </div>
    </div>
    <div class="flex flex-col">
      <label class="text-lg font-semibold"> Pronouns *</label>
      <Input
        className="transition-all focus:scale-105 focus:outline-none focus:ring-2 focus:ring-indigo-300"
        id="pronouns"
        placeholder="Your pronouns"
      />
    </div>
    <div class="flex flex-col">
      <label class="text-lg font-semibold">Game Selection *</label>
      <RadioGroup defaultValue="junior">
        <div class="flex flex-col space-y-2">
          <div class="flex items-center space-x-2">
            <RadioGroupItem id="junior" value="junior" />
            <Label htmlFor="junior">
              Junior (This is for the 8-12, and 13-17 games)
            </Label>
          </div>
          <div class="flex items-center space-x-2">
            <RadioGroupItem id="adventurer" value="adventurer" />
            <Label htmlFor="adventurer">
              Adventurer (For all ages, tables grouped by preference and age)
            </Label>
          </div>
          <div class="flex items-center space-x-2">
            <RadioGroupItem id="heroes" value="heroes" />
            <Label htmlFor="heroes">
              Heroes (High level gameplay, expanded rules, backstories, and
              more)
            </Label>
          </div>
        </div>
      </RadioGroup>
    </div>
    <div class="flex flex-col">
      <label class="text-lg font-semibold">Game Selection *</label>
      <RadioGroup defaultValue="junior">
        <div class="flex flex-col space-y-2">
          <div class="flex items-center space-x-2">
            <RadioGroupItem id="junior" value="junior" />
            <Label htmlFor="junior">
              Junior (This is for the 8-12, and 13-17 games)
            </Label>
          </div>
          <div class="flex items-center space-x-2">
            <RadioGroupItem id="adventurer" value="adventurer" />
            <Label htmlFor="adventurer">
              Adventurer (For all ages, tables grouped by preference and age)
            </Label>
          </div>
          <div class="flex items-center space-x-2">
            <RadioGroupItem id="heroes" value="heroes" />
            <Label htmlFor="heroes">
              Heroes (High level gameplay, expanded rules, backstories, and
              more)
            </Label>
          </div>
        </div>
      </RadioGroup>
    </div>

    <div class="flex flex-col">
      <label class="text-lg font-semibold"
        >Game Location Preference *
        <RadioGroup defaultValue="in-person">
          <div class="flex flex-col space-y-2">
            <div class="flex items-center space-x-2">
              <RadioGroupItem id="in-person" value="in-person" />
              <Label htmlFor="in-person">In Person</Label>
            </div>
            <div class="flex items-center space-x-2">
              <RadioGroupItem id="online" value="online" />
              <Label htmlFor="online">Online</Label>
            </div>
          </div>
        </RadioGroup>
      </label>
      <div class="flex flex-col">
        <label class="text-lg font-semibold">Preferred Days of the Week</label>
        <div class="flex flex-col space-y-2">
          <div class="flex items-center space-x-2">
            <Checkbox id="monday" />
            <label>Monday</label>
          </div>
          <div class="flex items-center space-x-2">
            <Checkbox id="tuesday" />
            <label>Tuesday</label>
          </div>
          <div class="flex items-center space-x-2">
            <Checkbox id="wednesday" />
            <label>Wednesday</label>
          </div>
          <div class="flex items-center space-x-2">
            <Checkbox id="thursday" />
            <label>Thursday</label>
          </div>
          <div class="flex items-center space-x-2">
            <Checkbox id="friday" />
            <label>Friday</label>
          </div>
          <div class="flex items-center space-x-2">
            <Checkbox id="saturday" />
            <label>Saturday</label>
          </div>
          <div class="flex items-center space-x-2">
            <Checkbox id="sunday" />
            <label>Sunday</label>
          </div>
        </div>
      </div>
      <div class="flex flex-col">
        <label class="text-lg font-semibold">Expanded Interests</label>
        <div class="flex flex-col space-y-2">
          <div class="flex items-center space-x-2">
            <Checkbox id="game-nights" />
            <label>Weekend Game Nights</label>
          </div>
          <div class="flex items-center space-x-2">
            <Checkbox id="session-zero" />
            <label>S.O.S (Session Zero Social)</label>
          </div>
          <div class="flex items-center space-x-2">
            <Checkbox id="nerd-nook" />
            <label
              >Nerd Nook - Learn, and build together in a public space.</label
            >
          </div>
          <div class="flex items-center space-x-2">
            <Checkbox id="game-retreats" />
            <label>
              Weekend Game Retreats - Leave the city behind and go on a weekend
              vacation to play D&D
            </label>
          </div>
          <div class="flex items-center space-x-2">
            <Checkbox id="dnd-camp" />
            <label>D&D Camp - Work in Progress, please inquire</label>
          </div>
        </div>
      </div>
      <div class="flex flex-col">
        <label class="text-lg font-semibold">
          About You
          <Textarea
            className="transition-all focus:scale-105 focus:outline-none focus:ring-2 focus:ring-indigo-300"
            id="about"
            placeholder="Tell me a bit about yourself, the games you want to play, or share a story."
          /></label
        >
      </div>
      <Button
        className="w-full rounded-md bg-indigo-600 py-3 text-white transition-all hover:bg-indigo-700"
      >
        Submit
      </Button>
    </div>
  </form>
</div>
