---
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Button, buttonVariants } from "@components/ui/button";
---

<div class="sm:align-center phb page p-10 sm:flex sm:flex-col">
  <div class="relative flex self-center rounded-lg">
    <button
      type="button"
      class="relative w-1/2 whitespace-nowrap rounded-md border-slate-50 bg-slate-50 py-2 text-sm font-medium text-slate-900 shadow-sm focus:outline-none sm:w-auto sm:px-8"
      >Monthly billing
    </button>
    <button
      type="button"
      class="relative ml-0.5 w-1/2 whitespace-nowrap rounded-md border border-transparent py-2 text-sm font-medium text-slate-900 focus:outline-none sm:w-auto sm:px-8"
      >Yearly billing
    </button>
  </div>
  <div
    class="page mt-12 space-y-3 sm:mt-16 sm:grid sm:grid-cols-3 sm:gap-6 sm:space-y-0 md:mx-auto md:max-w-5xl xl:grid-cols-3"
  >
    <Card className="divide-y rounded-lg border shadow-sm">
      <CardHeader className="p-6">
        <CardTitle>New Beginnings (Level 1-5)</CardTitle>
        <CardDescription>Available to all ages</CardDescription>
        <h5>$20/game</h5>
        <Button className={buttonVariants({ variant: "outline" })}>
          Sign up new Recruits
        </Button>
      </CardHeader>
      <CardDescription>
        <h3>What's included</h3>
        <ul class="@xl:column-3 flex-1 p-8 @lg:gap-8 @lg:pb-20 @2xl:columns-2">
          <li class="flex items-start gap-2 py-1">
            <svg
              width="1em"
              height="1em"
              viewBox="0 0 100 100"
              class="w-5 text-success"
              data-icon="check"
            >
