{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": false,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*", "components/*"],
      "@/components/*": ["src/components/*", "components/*"],
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@util/*": ["src/util/*"],
      "@cms/*": ["src/cms/*"],
      "@icons/*": ["src/icons/*"],
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@locales/*": ["src/locales/*"],
      "@/app/*": ["src/pages/*"],
      "@/registry/*": ["registry/*"],
      "@/hooks/*": ["hooks/*"],
      "@/config/*": ["src/config/*"],
      "@/types/*": ["types/*"],
      "@contentlayer/*": [".contentlayer/*"],
      "@/lib/*": ["lib/*"],
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["vue3-toastify/global"],
  },  
  "exclude": ["node_modules", "./scripts/build-registry.ts"]
}